@code {
    private int cartCount = 0;
    private decimal cartTotal = 0;

    protected override async Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += LocationChanged;
        await ActualizarCarrito();
    }

    private void LocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _ = ActualizarCarrito();
    }

    private async Task ActualizarCarrito()
    {
        try
        {
            var json = await JS.InvokeAsync<string>("sessionStorage.getItem", "techstore_carro");
            if (string.IsNullOrEmpty(json))
            {
                cartCount = 0;
                cartTotal = 0;
                return;
            }

            var items = System.Text.Json.JsonSerializer.Deserialize<List<ItemOrden>>(json) ?? new();
            cartCount = items.Count;
            cartTotal = items.Sum(i => i.PrecioTotal * i.Cantidad);
            
            await InvokeAsync(() => StateHasChanged());
        }
        catch
        {
            cartCount = 0;
            cartTotal = 0;
        }
    }

    private bool IsActive(string path)
    {
        return NavigationManager.Uri.EndsWith(path);
    }

    private void NavigateToCheckout()
    {
        if (cartCount > 0)
        {
            if (UsuarioService.UsuarioActual == null)
            {
                NavigationManager.NavigateTo("/login");
            }
            else
            {
                NavigationManager.NavigateTo("/checkout");
            }
        }
    }

    private async Task Logout()
    {
        await UsuarioService.LogoutAsync();
        NavigationManager.NavigateTo("/login");
    }
}
