@code {
    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += LocationChanged;
        CarritoNotificador.OnCarritoActualizado += ActualizarCarrito;
    }

    private void LocationChanged(object? sender, LocationChangedEventArgs e)
    {
        StateHasChanged();
    }

    private async Task ActualizarCarrito()
    {
        await InvokeAsync(() => StateHasChanged());
    }

    private bool IsActive(string path)
    {
        return NavigationManager.Uri.EndsWith(path);
    }

    private void NavigateToCheckout()
    {
        if (EstadoPedido.Items.Count > 0)
        {
            if (UsuarioService.UsuarioActual == null)
            {
                NavigationManager.NavigateTo("/login");
            }
            else
            {
                NavigationManager.NavigateTo("/checkout");
            }
        }
    }

    private async Task Logout()
    {
        await UsuarioService.LogoutAsync();
        NavigationManager.NavigateTo("/login");
    }
}
