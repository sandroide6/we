@page "/"
@using Microsoft.EntityFrameworkCore
@using TechStore.Data
@using TechStore.Models
@inject PortfolioContext DbContext
@rendermode InteractiveServer

<PageTitle>Mi Portafolio</PageTitle>

<div class="hero">
    <div class="hero-content">
        <h1>Hola, soy Desarrollador Full-Stack</h1>
        <p>Especializado en ASP.NET Core, React y desarrollo de soluciones empresariales</p>
        <a href="#proyectos" class="btn-hero">Ver mis proyectos</a>
    </div>
</div>

<section id="proyectos" class="projects-section">
    <div class="container">
        <h2>Mis Proyectos</h2>
        
        @if (proyectos == null)
        {
            <p>Cargando proyectos...</p>
        }
        else if (proyectos.Count == 0)
        {
            <p>Sin proyectos aún</p>
        }
        else
        {
            <div class="projects-grid">
                @foreach (var proyecto in proyectos)
                {
                    <div class="project-card">
                        <div class="project-image">
                            <img src="@proyecto.ImagenUrl" alt="@proyecto.Titulo" />
                        </div>
                        <div class="project-info">
                            <h3>@proyecto.Titulo</h3>
                            <p>@proyecto.Descripcion</p>
                            <div class="technologies">
                                @foreach (var tech in proyecto.Tecnologias.Split(","))
                                {
                                    <span class="tech-tag">@tech.Trim()</span>
                                }
                            </div>
                            <a href="@proyecto.UrlProyecto" target="_blank" class="btn-project">Ver Proyecto</a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<section class="contact-section">
    <div class="container">
        <h2>¿Hablamos?</h2>
        <p>Disponible para proyectos y oportunidades profesionales</p>
        <div class="contact-buttons">
            <a href="mailto:contacto@ejemplo.com" class="btn-contact">Enviar Email</a>
            <a href="https://github.com" target="_blank" class="btn-contact-secondary">GitHub</a>
            <a href="https://linkedin.com" target="_blank" class="btn-contact-secondary">LinkedIn</a>
        </div>
    </div>
</section>

@code {
    private List<Proyecto>? proyectos;

    protected override async Task OnInitializedAsync()
    {
        proyectos = await DbContext.Proyectos
            .OrderByDescending(p => p.FechaCreacion)
            .ToListAsync();
    }
}
